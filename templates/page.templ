package templates

import "github.com/maid-zone/soundcloak-instances/data"
import "time"

templ Link(l data.Link) {
    if l.URL != "" {
        <a href={ templ.URL(l.URL) }>{ l.Text }</a>
    } else {
        { l.Text }
    }
}

